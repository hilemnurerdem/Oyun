<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4E6A3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/time"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:layout_marginTop="140dp"
        android:text="Time: 10"
        android:textColor="#E21212"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="116dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:text="Score: 0"
        android:textColor="#D40FEB"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/tavsan" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreazalt"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/havuc" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/tavsan" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreazalt"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/havuc" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/tavsan" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreazalt"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/havuc" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/tavsan" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/tavsan" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreazalt"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/havuc" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/tavsan" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreazalt"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/havuc" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="scoreartir"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/tavsan" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="163dp"
        android:layout_height="136dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="54dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
